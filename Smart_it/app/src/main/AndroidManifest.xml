<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 인터넷 권한 추가 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- 이미지 읽기 권한 추가 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Smart_it"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- 스플래시 화면 - 메인 런처 -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Smart_it.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        
        <!-- 약관 동의 화면 -->
        <activity
            android:name=".TermsActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:label="서비스 이용 약관" />
        
        <!-- 로그인 화면 -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:label="로그인" />
            
        <!-- 회원가입 화면 -->
        <activity
            android:name=".SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:label="회원가입" />
            
        <!-- 이메일 찾기 화면 -->
        <activity
            android:name=".FindEmailActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:label="이메일 찾기" />
            
        <!-- 비밀번호 찾기 화면 -->
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:label="비밀번호 찾기" />
            
        <!-- 비밀번호 재설정 화면 -->
        <activity
            android:name=".ResetPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:label="비밀번호 재설정" />
            
        <!-- 이메일 인증 화면 -->
        <activity
            android:name=".EmailVerificationActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:label="이메일 인증" />
        
        <!-- 메인 홈 화면 -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:label="Veriscope"
            android:launchMode="singleTop" />
            
        <!-- 뉴스 평가 화면 -->
        <activity
            android:name=".VeriscopeActivity"
            android:exported="false"
            android:label="뉴스 신뢰도 평가" />
            
        <!-- 로딩 화면 -->
        <activity
            android:name=".LoadingActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:label="분석 중" />
            
        <!-- 결과 화면 -->
        <activity
            android:name=".ResultActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:label="평가 결과" />
            
        <!-- 마이페이지 화면 -->
        <activity
            android:name=".MyPageActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:label="마이페이지" />
            
        <!-- 제보하기 화면 -->
        <activity
            android:name=".ReportActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:label="제보하기" />
            
            <!-- 제보하기 양식 화면 -->
            <activity
                android:name=".RewardActivity"
                android:exported="false"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar"
                android:label="리워드" />
            <activity
                android:name=".VoucherActivity"
                android:exported="false"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar"
                android:label="온누리 상품권 교환" />
            <activity
                android:name=".ConfirmCompleteActivity"
                android:exported="false"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar"
                android:label="확인 완료" />
            
        <!-- 계정 관리 화면 -->
        <activity
            android:name=".AccountManagementActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:label="계정 관리" />
            
        <activity
            android:name=".ReportFormActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:label="신고하기" />        <!-- FileProvider for sharing files -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.veriscope.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>
</manifest>
